<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.andreisuslov.morning-dashboard</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/node</string>
        <string>/Users/ansuslov/projects/morning-dashboard/dashboard.js</string>
    </array>
    
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>7</integer>
        <key>Minute</key>
        <integer>30</integer>
    </dict>
    
    <!-- Run if the scheduled time was missed (computer was asleep/off) -->
    <key>StartInterval</key>
    <integer>0</integer>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin</string>
        <key>HOME</key>
        <string>/Users/ansuslov</string>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/tmp/morning-dashboard.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/morning-dashboard.err</string>
    
    <!-- Nice process priority -->
    <key>Nice</key>
    <integer>10</integer>
</dict>
</plist>
